{% extends '/admin/authenticated/layout/base.html.twig' %}

{% import '/admin/components/helpers_macro.html.twig' as helpers %}

{% set isEdit = false %}

{% block title %}
    Create Platform
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col">
            <div class="card card-info card-outline direct-chat direct-chat-info">
                {{ form_start(form) }}
                <div class="card-header card-header-compressed">
                    <strong class="font-20">Create Platform</strong>
                </div>
                <div class="card-body p-2">
                    <div class="row">
                        <div class="col-8 offset-2">
                            {% include '/admin/authenticated/platform/_form_fields.html.twig' %}
                        </div>
                    </div>
                </div>
                <div class="card-footer p-2 text-center">
                    <button type="submit" class="btn btn-info btn-sm btn-admin">Insert</button>
                    <a href="{{ path('admin_at_device_type_list') }}" class="btn btn-secondary btn-sm btn-admin">Cancel</a>
                </div>
                {{ form_end(form) }}
                {{ helpers.form_processing() }}
            </div>
        </div>
    </div>
{% endblock %}

{% block js %}
    {{ parent() }}
    <script src="{{ asset('/app/admin/js/authenticated/Platform/PlatformFormValidator.js') }}"></script>
    <script src="{{ asset('/app/admin/js/authenticated/Platform/PlatformForm.js') }}"></script>
    <script>
        (new PlatformForm()).init();
    </script>
{% endblock %}
