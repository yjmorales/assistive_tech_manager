{% extends '/admin/authenticated/layout/base.html.twig' %}

{% import '/admin/components/helpers_macro.html.twig' as helpers %}

{% set isEdit = true %}

{% block title %}
    Edit Client
{% endblock %}

{% block content %}

    {{ helpers.notifications_success() }}
    {{ helpers.notifications_error() }}
    {{ helpers.notifications_warning() }}


    <div class="row">
        <div class="col">
            <div class="card card-info card-outline direct-chat direct-chat-info">
                {{ form_start(form) }}
                <div class="card-header card-header-compressed">
                    <strong class="font-20">Edit Client</strong>
                </div>
                <div class="card-body p-2">
                    <div class="row">
                        <div class="col-8 offset-2">
                            {% include '/admin/authenticated/client/_form_fields.html.twig' %}
                        </div>
                    </div>
                </div>
                <div class="card-footer p-2 text-center">
                    <button type="submit" class="btn btn-info btn-sm">Update</button>
                    <a href="{{ path('admin_client_list') }}" class="btn btn-secondary btn-sm">Cancel</a>
                </div>
                {{ form_end(form) }}
                {{ helpers.form_processing() }}
            </div>
        </div>
    </div>
{% endblock %}

{% block js %}
    {{ parent() }}
    <script src="{{ asset('/app/admin/js/authenticated/Client/ClientFormValidator.js') }}"></script>
    <script src="{{ asset('/app/admin/js/authenticated/Client/ClientForm.js') }}"></script>
    <script>
        (new ClientForm()).init();
    </script>
{% endblock %}